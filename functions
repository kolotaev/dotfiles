# replaces list of dirs taken from Mango inside builded instance -> clears cache
function syrup() {
    if [ -z "${1}" ]; then
        echo "enter ~/www/DEST";
        return 1;
    fi;
    if [ -z "${2}" ]; then
        echo "enter PART to replace";
        return 1;
    fi;
    # is taken from global www root, see .exports
    INST="$1"
    shift;
    TO=$www/$INST/ult/sugarcrm
    for dest in $@; do
        TO_DEST=$TO/$dest
        FROM=$work/Mango/sugarcrm/$dest
        if [ -d "$TO_DEST" ]; then
            sudo rm -rf $TO_DEST;
            cp -R $FROM $TO_DEST;
        else
            echo "No file -- "$TO_DEST" -- found"
            return 1;
        fi;
    done
    sudo rm -rf $TO/cache/*;
    sudo chmod -R 0777 $TO;
}